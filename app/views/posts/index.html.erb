<p id="notice"><%= notice %></p>

<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Recent Posts</h3>
    </div>
    <div class="panel-body">
      <% @posts.each do |post| %>
        <div class='row'>
          <div class='col-sm-8'>
            <div class='row'>
              <div class='col-sm-4'> <%= post.title %></div>
              <div class='col-sm-8'><%= post.body %></div>
            </div>
          </div>
          <div class='col-sm-4'>
            <div class='row'>
              <div class='col-sm-4'><%= link_to 'Show', post %></div>
              <div class='col-sm-4'><%= link_to 'Edit', edit_post_path(post) %></div>
              <div class='col-sm-4'><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= link_to 'New Post', new_post_path %>
    </div>
  </div>
</div>
